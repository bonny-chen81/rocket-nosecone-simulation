FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      snappyHexMeshDict;
}

castellatedMesh true;
snap            true;
addLayers       false;

geometry
{
    nosecone.stl
    {
        type triSurfaceMesh;
        name nosecone;
    }
}

